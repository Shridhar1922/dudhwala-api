{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "noImplicitAny": false,
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
    // "composite": true
  },
  "include": ["src/**/*.ts", "src/templates/*.html"],
  "exclude": ["node_modules", "dist"]
}
